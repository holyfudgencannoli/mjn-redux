{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@db": ["./db"],
      "@db/*": ["./db/*"],
      "@features": ["./features"],
      "@features/*": ["./features/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@navigation": ["./navigation"],
      "@navigation/*": ["./navigation/*"],
      "@theme": ["./theme"],
      "@theme/*": ["./theme/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
